
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Video {
id                    String            @id @default(uuid())
title                 String     

description            String
publicid              String
originalsize          String
compressed            String
duration              Float
createdAt             DateTime               @default(now())
updatedAt             DateTime               @updatedAt

  clerkId       String
  user          User     @relation(fields: [clerkId], references: [clerkId])
}


model User {
  id        String   @id @default(uuid())    
  name       String
  email       String
  clerkId   String   @unique                  
  videos    Video[]                         
}